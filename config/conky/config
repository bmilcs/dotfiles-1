${font Font Awesome 5 Free:style=Solid}${font} ${downspeed wlan0} ${goto 300} ${font Font Awesome 5 Free:style=Solid}${font} ${upspeed wlan0}
${downspeedgraph wlan0 80,260 6C71C4 6C71C4} ${goto 300} ${upspeedgraph wlan0 80,260 2AA198 2AA198}
${font Font Awesome 5 Free:style=Solid} ${font}${wireless_essid} ${alignr}${font Font Awesome 5 Free:style=Solid} ${font}${addr wlan0}
