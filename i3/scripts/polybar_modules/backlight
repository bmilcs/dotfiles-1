#!/bin/bash

# This script uses Crouton's brightness script to set the backlight

INC=5
get-level() {
    local round=$(( INC/2 ))
    echo $(( (($(brightness) + round)/INC) * INC))
}

polybar-signal() {
    polybar-msg hook backlight 1
}

increase() {
    local current=$(get-level)
    echo $current
    brightness $((current + $INC))
    polybar-signal
}

decrease() {
    local current=$(get-level)
    echo $current
    brightness $((current - $INC))
    polybar-signal
}

output-perc() {
    echo $(get-level)%
}

output-slider() {
    COLOR_ACTIVE="%{F#268BD2}"
    COLOR_END="%{F-}"
     
    local level=$(( $(get-level) / $INC ))
    local num_steps=$(( (100 / $INC) - 1 ))

    echo -n "$COLOR_ACTIVE"
    for i in $(seq 1 $level); do
        echo -n "━"
    done
    echo -n "█$COLOR_END"
    for i in $(seq $level $num_steps); do
        echo -n "━"
    done
    echo
}

case "$1" in
    increase)   increase;;
    inc)        increase;;
    decrease)   decrease;;
    dec)        decrease;;
    get)        output-perc;;
    slider)     output-slider;;
    *)
        echo "Unknown option $1"
        echo "backlight <inc[rease]|dec[rease]|get|slider>"
esac
