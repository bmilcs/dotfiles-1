#!/bin/bash

WINDOW_ID_CONKY=/tmp/conky_window_id
WINDOW_ID_POLYBAR=/tmp/polybar_window_id

conky_launch() {
    # Hacky X11 magic to make Conky appear above polybar
    killall conky
    # xdotool search can't find Conky's window but fortunately Conky outputs it
    conky -c ~/.config/conky/config 2> /tmp/conky_out
    # Extract the hex window id from Conky's output
    HEX=$(awk '/drawing to created window/ {print $NF}' /tmp/conky_out | tr -d '()' | awk -Fx '{print $2}')
    WIN_ID=$(( 16#$HEX )) # convert to decimal
    xdotool windowunmap $WIN_ID
    echo $WIN_ID > $WINDOW_ID_CONKY
}

polybar_launch() {
    killall polybar

    polybar expanded &
    local polybar_pid=$!
    local polybar_win=$(xdotool search --sync --pid $polybar_pid)
    echo $polybar_win > $WINDOW_ID_POLYBAR

    bar_collapse
}

launch() {
    conky_launch
    sleep 0.2
    polybar_launch
}

bar_expand() {
    local polybar_win=$(cat $WINDOW_ID_POLYBAR)
    xdotool windowmove $polybar_win 0 0
}

bar_collapse() {
    local polybar_win=$(cat $WINDOW_ID_POLYBAR)
    xdotool windowmove $polybar_win 0 -320
}

rofi_open() {
    options_close
    bar_expand &
    rofi -modi run -show run
    bar_collapse
}

drun_open() {
    bar_expand &
    rofi -theme drun -modi drun -show drun
    bar_collapse
}

search_open() {
    options_close
    bar_expand &
    rofi -theme window -modi window -show window 
    bar_collapse
}

options_open() {
    bar_expand
    echo "open" > /tmp/polybar_side_panel_state
    ID_CONKY=$(cat $WINDOW_ID_CONKY)
    xdotool windowmap $ID_CONKY
    xdotool windowraise $ID_CONKY
    ~/.config/i3/scripts/music_player show_applet
}

options_close() {
    bar_collapse
    ID_CONKY=$(cat $WINDOW_ID_CONKY)
    xdotool windowunmap $ID_CONKY
    ~/.config/i3/scripts/music_player hide_applet
    echo "cmd:hide" >> /tmp/polybar_mqueue_panel
    echo "close" > /tmp/polybar_side_panel_state
}

options_toggle() {
    if [ "$(cat /tmp/polybar_side_panel_state)" == "open" ]; then
        options_close
    else
        options_open
    fi
}

case "$1" in
    rofi)
        rofi_open;;
    search)
        search_open;;
    drun)
        drun_open;;
    options)
        options_toggle;;
    launch)
        launch;;
esac
