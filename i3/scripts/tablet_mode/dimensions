#!/bin/bash

DISPLAY_WIDTH=1600
DISPLAY_HEIGHT=2400

OPTIONS_X_OFFSET=1300

HEIGHT_CLOSED=80
HEIGHT_MED=280
HEIGHT_FULL=680

Y_CLOSED=$((HEIGHT_CLOSED - HEIGHT_FULL))
Y_MED=$((HEIGHT_MED - HEIGHT_FULL))
Y_FULL=0

LAUNCHER_HEIGHT=200
LAUNCHER_Y=40

HEIGHT_FULL_THRESH=$(( (HEIGHT_FULL + 3*HEIGHT_MED)/4 ))
HEIGHT_MED_THRESH=$(( (HEIGHT_MED + HEIGHT_CLOSED)/2 ))

